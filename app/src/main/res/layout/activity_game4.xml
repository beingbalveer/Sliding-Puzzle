<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333"
    tools:context="com.bandroid.balveer.slidingpuzzlev_2.game">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sliding Puzzle"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#0f0"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30sp"
        android:layout_below="@id/name"
        android:layout_marginLeft="20dp"
        android:textColor="#f00"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23"
        android:textSize="30sp"
        android:textColor="#f00"
        android:layout_below="@+id/name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"/>

    <ImageButton
        android:id="@+id/j1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginTop="100dp"
        android:src="@drawable/j1"
        android:padding="0dp"/>

    <ImageButton
        android:id="@+id/j2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_toRightOf="@+id/j1"
        android:layout_marginTop="100dp"
        android:padding="0dp"
        android:src="@drawable/j2"/>

    <ImageButton
        android:id="@+id/j3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_toRightOf="@+id/j2"
        android:layout_marginTop="100dp"
        android:padding="0dp"
        android:src="@drawable/j3"/>

    <ImageButton
        android:id="@+id/j4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_toRightOf="@+id/j3"
        android:layout_marginTop="100dp"
        android:padding="0dp"
        android:src="@drawable/j4"/>

    <ImageButton
        android:id="@+id/j5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/j1"
        android:padding="0dp"
        android:src="@drawable/j5"/>

    <ImageButton
        android:id="@+id/j6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/j1"
        android:layout_toRightOf="@+id/j5"
        android:padding="0dp"
        android:src="@drawable/j6"/>

    <ImageButton
        android:id="@+id/j7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/j1"
        android:layout_toRightOf="@+id/j6"
        android:padding="0dp"
        android:src="@drawable/j7"/>

    <ImageButton
        android:id="@+id/j8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/j1"
        android:layout_toRightOf="@+id/j7"
        android:padding="0dp"
        android:src="@drawable/j8"/>

    <ImageButton
        android:id="@+id/j9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/j5"
        android:padding="0dp"
        android:src="@drawable/j9"/>

    <ImageButton
        android:id="@+id/j10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/j5"
        android:layout_toRightOf="@+id/j9"
        android:padding="0dp"
        android:src="@drawable/j10"/>

    <ImageButton
        android:id="@+id/j11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/j5"
        android:layout_toRightOf="@+id/j10"
        android:padding="0dp"
        android:src="@drawable/j11"/>

    <ImageButton
        android:id="@+id/j12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/j5"
        android:layout_toRightOf="@+id/j11"
        android:padding="0dp"
        android:src="@drawable/j12"/>

    <ImageButton
        android:id="@+id/j13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/j9"
        android:padding="0dp"
        android:src="@drawable/j13"/>

    <ImageButton
        android:id="@+id/j14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/j9"
        android:layout_toRightOf="@+id/j13"
        android:padding="0dp"
        android:src="@drawable/j14"/>

    <ImageButton
        android:id="@+id/j15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/j9"
        android:layout_toRightOf="@+id/j14"
        android:padding="0dp"
        android:src="@drawable/j15"/>

    <ImageButton
        android:id="@+id/blank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/j9"
        android:layout_toRightOf="@+id/j15"
        android:padding="0dp"
        android:src="@drawable/jblank"/>

</RelativeLayout>
